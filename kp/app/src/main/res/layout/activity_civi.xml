<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg21"
    tools:context=".civi">


    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/text_bg"
        android:gravity="center"

        android:padding="20dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@android:color/background_light" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/black"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <Button
        android:id="@+id/home"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/menu"
        android:layout_centerHorizontal="true"
        android:background="@drawable/home" />

    <Button
        android:id="@+id/menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/menu" />

    <Button
        android:id="@+id/map"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/map" />

    <Button
        android:id="@+id/npc_two"
        android:layout_width="130dp"
        android:layout_height="216dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/home"
        android:layout_below="@+id/menu"
        android:layout_marginBottom="114dp"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="131dp"
        android:background="@drawable/c3" />

    <Button
        android:id="@+id/use_item"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/npc_two"
        android:layout_alignEnd="@+id/menu"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/use_item" />

    <Button
        android:id="@+id/turn_right"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/npc_two"
        android:layout_below="@+id/menu"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/riht" />
</RelativeLayout>