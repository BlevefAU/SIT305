<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bleve.knightprinciple.civi_dice">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp"
        android:background="@drawable/bg_2"
        app:srcCompat="@drawable/c4" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@android:color/background_dark"
        android:layout_above="@+id/text"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/text_bg"
        android:gravity="center"

        android:padding="20dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/dice"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/text"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/dice" />

    <Button
        android:id="@+id/one"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="21dp"
        android:background="@drawable/one"
        android:layout_above="@+id/tv"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/two"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/one"
        android:layout_below="@+id/one"
        android:background="@drawable/two" />

    <Button
        android:id="@+id/three"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/three"
        android:layout_above="@+id/two"
        android:layout_toEndOf="@+id/one" />

    <Button
        android:id="@+id/four"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/three"
        android:layout_below="@+id/three"
        android:background="@drawable/four" />

    <Button
        android:id="@+id/five"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/five"
        android:layout_above="@+id/six"
        android:layout_alignStart="@+id/six" />

    <Button
        android:id="@+id/six"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/three"
        android:layout_below="@+id/three"
        android:layout_marginLeft="75dp"
        android:background="@drawable/six" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start game"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:layout_above="@+id/dice"
        android:layout_alignEnd="@+id/dice" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/six"
        android:layout_alignEnd="@+id/tv"
        android:text="Back" />


</RelativeLayout>
