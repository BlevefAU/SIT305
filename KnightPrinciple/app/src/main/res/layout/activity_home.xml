<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context="com.example.bleve.knightprinciple.home">

    <android.support.v7.widget.Toolbar
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/black"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <Button
        android:id="@+id/map"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="56dp"
        android:background="@drawable/map"
        android:layout_alignTop="@+id/home"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/menu" />

    <ImageView
        android:id="@+id/home"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/home"
        android:layout_alignTop="@+id/menu"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        android:id="@+id/box1"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginBottom="76dp"
        android:background="?attr/colorButtonNormal"
        android:clipToPadding="false"
        android:layout_above="@+id/text"
        android:layout_alignEnd="@+id/home"
        android:layout_marginEnd="20dp">

        <TextView
            android:id="@+id/label1"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Equipment"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/clothes"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/box1"
            android:layout_alignTop="@+id/box1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="90dp"
            app:srcCompat="@drawable/clothes" />

        <ImageView
            android:id="@+id/sword"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/swords" />

        <ImageView
            android:id="@+id/ring"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="140dp"
            app:srcCompat="@drawable/ring" />

        <TextView
            android:id="@+id/data_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/box1"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="45dp"
            android:layout_toStartOf="@+id/home"
            android:text="No wearing"
            android:textColor="@android:color/background_light" />

        <TextView
            android:id="@+id/data_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="98dp"
            android:text="No wearing"
            android:textColor="@android:color/background_light" />

        <TextView
            android:id="@+id/data_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="145dp"
            android:text="No wearing"
            android:textColor="@android:color/background_light" />

    </FrameLayout>

    <ImageView
        android:id="@+id/c1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/navbar"
        android:layout_marginStart="80dp"
        android:layout_toEndOf="@+id/menu"
        app:srcCompat="@drawable/c1" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#444444"
        android:gravity="center"
        android:text=""
        android:textAlignment="center"

        android:textColor="@android:color/background_light" />

</RelativeLayout>
