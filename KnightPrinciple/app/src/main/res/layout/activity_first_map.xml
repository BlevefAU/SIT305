<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/first_house"
    tools:context="com.example.bleve.knightprinciple.first_map">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/black"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <Button
        android:id="@+id/home"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/menu"
        android:layout_centerHorizontal="true"
        android:background="@drawable/home" />

    <Button
        android:id="@+id/map"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/map" />

    <Button
        android:id="@+id/menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="56dp"
        android:background="@drawable/menu" />

    <Button
        android:id="@+id/npc_one"
        android:layout_width="130dp"
        android:layout_height="250dp"
        android:background="@drawable/c2"
        android:layout_marginBottom="53dp"
        android:layout_above="@+id/text"
        android:layout_alignParentStart="true"
        android:layout_marginStart="81dp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#444444"
        android:gravity="center"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/map_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:background="@android:color/transparent"
        android:layout_above="@+id/text"
        android:layout_alignParentStart="true" />

</RelativeLayout>
