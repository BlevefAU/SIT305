<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bleve.knightprinciple.menu">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/black"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <Button
        android:id="@+id/house"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/home"
        android:layout_alignBottom="@+id/map"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/map"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/map" />

    <Button
        android:id="@+id/menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/toolbar3"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="56dp"
        android:background="@drawable/menu" />

    <Button
        android:id="@+id/exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:text="exit the game" />

    <TextView
        android:id="@+id/quest"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar3"
        android:layout_marginTop="45dp"
        android:background="@android:color/darker_gray"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/name_quest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/menu"
        android:layout_alignTop="@+id/quest"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="10dp"
        android:text="Quest:"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/quest_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/name_quest"
        android:layout_below="@+id/name_quest"
        android:layout_marginStart="6dp"
        android:layout_marginTop="11dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/name_quest"
        android:layout_below="@+id/quest"
        android:layout_marginTop="27dp"
        android:text="Item:"
        android:textSize="28sp" />

    <ImageView
        android:id="@+id/i1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/miss" />

    <ImageView
        android:id="@+id/i5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/exit"
        android:layout_alignStart="@+id/i1"
        android:layout_marginBottom="8dp"
        app:srcCompat="@drawable/miss" />

    <ImageView
        android:id="@+id/i6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/miss"
        android:layout_alignTop="@+id/i5"
        android:layout_alignStart="@+id/i2" />

    <ImageView
        android:id="@+id/i7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/i3"
        android:layout_alignTop="@+id/i6"
        app:srcCompat="@drawable/miss" />

    <ImageView
        android:id="@+id/i8"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/miss"
        android:layout_alignTop="@+id/i7"
        android:layout_alignStart="@+id/i4" />

    <ImageView
        android:id="@+id/i4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/map"
        android:layout_alignTop="@+id/i3"
        app:srcCompat="@drawable/miss" />

    <ImageView
        android:id="@+id/i3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/miss"
        android:layout_marginStart="11dp"
        android:layout_alignTop="@+id/i2"
        android:layout_alignStart="@+id/house" />

    <ImageView
        android:id="@+id/i2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="7dp"
        app:srcCompat="@drawable/miss"
        android:layout_alignTop="@+id/i1"
        android:layout_toEndOf="@+id/name_quest" />
</RelativeLayout>
